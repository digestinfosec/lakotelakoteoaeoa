{% if session.login.is_student %}
  {% set student_menu = 'menu_profile_student' %}
{% endif %}
<div class="row">
  <div class="col-md-12">
    <div class="horizontal-menu">
      <a href="{{ base_url('dashboard/profile') }}"
         class="list-h-top {% if menu_top == 'profile' %} active {% endif %} {{ student_menu }}">
        <div class="title">
          {{ line('dashboard_5', 'dashboard') }}
        </div>
      </a>
      {% if session.login.is_teacher %}
        <a href="{{ base_url('dashboard/profile/teacher') }}"
           class="list-h-top {% if menu_top == 'teacher' %} active {% endif %}">
          <div class="title">
            {{ line('dashboard_50', 'dashboard') }}
          </div>
        </a>
      {% endif %}
      <a href="{{ base_url('dashboard/profile/password-setting') }}"
         class="list-h-top {% if menu_top == 'password' %} active {% endif %} {{ student_menu }}">
        <div class="title">
          {{ line('dashboard_6', 'dashboard') }}
        </div>
      </a>
      <a href="{{ base_url('dashboard/profile/notification-setting') }}"
         class="list-h-top {% if menu_top == 'notification' %} active {% endif %} {{ student_menu }}">
        <div class="title">
          {{ line('dashboard_11', 'dashboard') }}
        </div>
      </a>
    </div>
  </div>
</div>
