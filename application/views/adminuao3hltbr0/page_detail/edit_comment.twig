{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "edit user page" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block content %}
  <section>
    {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
    <div class="main-content">
      {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
      <div class="page-content">
        <div class="header">
          <h2><strong>Edit Comment</strong></h2>
          <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
              <li><a href="{{ base_url() }}/adminuao3hltbr0/home">Dashboard</a></li>
              <li class="active">Edit comment</li>
            </ol>
          </div>
          {% include 'adminuao3hltbr0/shareds/alert.twig' %}
        </div>
        <div class="row">
          <div class="col-lg-12 portlets">
            <div class="panel">
              <div class="panel-content">
                <div class="row">
                  {{form_open_multipart('')}}
                    <input type="hidden" name="class_id" value="{{ comment.class_id }}"/>
                    <div class="col-md-12">
                      <div class="row boxed-profile form-group">
                        <div class="col-md-12">
                          <h3><strong>{{ comment.first_name ~ " " ~ comment.last_name }}</strong>'s comment at <strong>{{ convert_to_timezone(session.ip_address, comment.comment_time)|date("j F Y g.ia") }}</strong></h3>
                        </div>
                        <div class="col-md-12">
                          <div class="row">
                            <div class="col-md-12">
                              <label for="goal">Comment<sup class="required-sag">*</sup></label>
                              {{ sg_field('textarea', 'comment', comment, {
                              placeholder: 'Enter comment here..',
                              class: 'form-control',
                              rows: '10',
                              cols: '10',
                              class: 'tinymce-class'}) }}
                            </div>
                          </div>
                        </div>                     
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <input type="submit" class="btn btn-md btn-primary" value="Submit">
                      </div>
                    </div>
                  {{ form_close() }}
                </div>
              </div>
            </div>
          </div>
        </div>
        {% include 'adminuao3hltbr0/shareds/footer.twig' %}
      </div>
    </div>
  </section>
  {# section for sidebar left and searching full #}
  <div class="loader-overlay">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
{% endblock %}

