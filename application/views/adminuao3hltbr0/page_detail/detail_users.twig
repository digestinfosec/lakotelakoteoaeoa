{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "users detail" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block css %}
  <link href="{{ base_url() }}assets/adminuao3hltbr0/plugins/datatables/dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <section>
    {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
    <div class="main-content">
      {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
      <div class="page-content">
        <div class="header">
          <h2><strong>Users</strong> Detail</h2>
          <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
              <li><a href="{{ base_url() }}adminuao3hltbr0/home">Dashboard</a></li>
              <li class="active">Users Detail</li>
            </ol>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="col-md-3">
                  <img src="{{ base_url() }}images/avatar/{{user.profile_pic}}" class="img-thumbnail" alt="">
                </div>
                <div class="col-md-9">
                  <table class="table">
                    <tr>
                      <td width="110"><strong>First Name</strong></td>
                      <td>:</td>
                      <td>{{user.first_name}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Last Name</strong></td>
                      <td>:</td>
                      <td>{{user.last_name}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Email</strong></td>
                      <td>:</td>
                      <td>{{user.email}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Birth date</strong></td>
                      <td>:</td>
                      <td>{{user.birth_date}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Home Phone</strong></td>
                      <td>:</td>
                      <td>{{user.home_phone}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Mobile Phone</strong></td>
                      <td>:</td>
                      <td>{{user.mobile_phone}}</td>
                    </tr>
                    <tr>
                      <td width="110"><strong>Created At</strong></td>
                      <td>:</td>
                      <td>{{user.created_at}}</td>
                    </tr>
                  </table>
                </div>
                <br>
                <div class="pull-right">
                  <a href="{{ base_url() }}adminuao3hltbr0/page_users" class="btn btn-success">
                    <i class="fa fa-bars"></i>
                    Back to List users
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% include 'adminuao3hltbr0/shareds/footer.twig' %}
      </div>
    </div>
  </section>
  {# section for sidebar left and searching full #}
  <div class="loader-overlay">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
{% endblock %}

{% block script %}
  <a href="#" class="scrollup"><i class="fa fa-angle-up"></i></a>
  <script src="{{ base_url() }}assets/adminuao3hltbr0/plugins/jquery/jquery-1.11.1.min.js"></script>
