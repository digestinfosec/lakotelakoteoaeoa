{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "Payment Confirmation" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block css %}
<link href="{{ base_url() }}assets/adminuao3hltbr0/plugins/datatables/dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
<section>
  {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
  <div class="main-content">
    {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
    <div class="page-content">
      <div class="header">
        <h2><strong>Payment</strong> Confirmation</h2>
        <div class="breadcrumb-wrapper">
          <ol class="breadcrumb">
            <li><a href="{{ base_url() }}/adminuao3hltbr0/home">Dashboard</a></li>
            <li class="active">Payment confirmation</li>
          </ol>
        </div>
          {% include 'adminuao3hltbr0/shareds/alert.twig' %}
      </div>
      <div class="row">
        <div class="col-lg-12 portlets">
          <div class="panel">
            <div class="panel-content pagination2 table-responsive">
              <table class="table">
                <tr>
                  <td>Bank Transaction No.</td>
                  <td>:</td>
                  <td>
                    {{payment.transaction_code}}
                  </td>
                </tr>
                <tr>
                  <td>Bank Destination</td>
                  <td>:</td>
                  <td>{{payment.bank_destination_name}}</td>
                </tr>
                <tr>
                  <td>Bank Name</td>
                  <td>:</td>
                  <td>{{payment.bank_name}}</td>
                </tr>
                <tr>
                  <td>Bank Account Name</td>
                  <td>:</td>
                  <td>{{payment.bank_account_name}}</td>
                </tr>
                <tr>
                  <td>Transfer Amount</td>
                  <td>:</td>
                  <td>{% if payment.amount ==0 %}
                      {% else %}
                        {{ delimiter_number_dec(payment.currency, payment.amount, 2)}}
                      {% endif %}
                  </td>
                </tr>
                <tr>
                  <td>Transfer Date</td>
                  <td>:</td>
                  <td>
                    {{payment.payment_date|date('j F Y')}}
                  </td>
                </tr>
                <tr>
                  <td>Status</td>
                  <td>:</td>
                  <td>
                    <strong>{{status[payment.status]}}</strong>
                  </td>
                </tr>
                {% if payment.photo %}
                <tr>
                  <td>Transfer Receipt</td>
                  <td>:</td>
                  <td>
                  <div class="image" style="width: 40%; overflow: hidden;">
                    <img style="width: 100%; height: auto;" src="{{ base_url() }}images/transaction_bank/{{ payment.photo }}" >
                  </div>
                  </td>
                </tr>
                {% endif %}
              </table>
            </div>
          </div>
          {{form_open('')}}
          {% if payment.status != status_paid %}
              <button name="confirm" type="submit" value="confirm" class="btn btn-success">
                <i class="fa fa-check"></i> Confirm
              </button>
          {% endif %}
          <div class="pull-right">
            <a href="{{ base_url() }}adminuao3hltbr0/page_listing_receipt" class="btn btn-default">
              <i class="fa fa-bars"></i>
              Back to Receipt Listing
            </a>
          </div>
          {{form_close()}}
        </div>
      </div>
      {% include 'adminuao3hltbr0/shareds/footer.twig' %}
    </div>
  </div>
</section>
{# section for sidebar left and searching full #}
<div class="loader-overlay">
  <div class="spinner">
    <div class="bounce1"></div>
    <div class="bounce2"></div>
    <div class="bounce3"></div>
  </div>
</div>
{% endblock %}

