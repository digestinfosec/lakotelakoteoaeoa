{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "users" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block css %}
<link href="{{ base_url() }}assets/adminuao3hltbr0/plugins/datatables/dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <section>
    {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
    <div class="main-content">
      {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
      <div class="page-content">
        <div class="header">
          <h2><strong>Users</strong></h2>
          <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
              <li><a href="{{ base_url() }}adminuao3hltbr0/home">Dashboard</a></li>
              <li class="active">Users</li>
            </ol>
          </div>
          {% include 'adminuao3hltbr0/shareds/alert.twig' %}
        </div>
        <div class="row">
          <div class="col-lg-12 portlets">
            <div class="panel">
              <div class="panel-content pagination2 table-responsive">
                {{form_open('')}}
                <div class="pull-left">
                  <button name="active" type="submit" value="active" class="btn btn-success">
                    <i class="fa fa-check"></i> Activate
                  </button>
                  <button name="delete" type="submit" value="delete" class="btn btn-danger">
                    <i class="fa fa-times"></i> Ban
                  </button>
                  <button name="download" type="submit" value="download" class="btn btn-default">
                    <i class="fa fa-download"></i> Download Excel
                  </button>
                </div>
                <table id="table2" class="table table-hover dataTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Full Name</th>
                      <th>Email</th>
                      <th>Status</th>
                      <th width="10%">Notification newsletter</th>
                      <th width="20%">Action</th>
                    </tr>
                  </thead>
                  {% if users %}
                  <tbody>
                    {% for user in users %}
                      {% if user.status == 0 %}
                        {% set lblcls = 'warning' %}
                      {% elseif user.status == 1 %}
                        {% set lblcls = 'success' %}
                      {% else %}
                        {% set lblcls = 'danger' %}
                      {% endif %}
                      <tr>
                        <td><input name="id[]" value="{{ user.id }}" type="checkbox"
                                   data-checkbox="icheckbox_square-purple"></td>
                        <td>{{ user.first_name }} {{ user.last_name }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                          <h4>
                            <span class="label label-{{lblcls}}">{{ user_status[user.status] }}</span>
                          </h4>
                        </td>
                        {% if user.notification_newsletter == 1 %}
                          {% set subscribe = "Yes" %}
                        {% else %}
                          {% set subscribe = "No" %}
                        {% endif %}
                        
                        <td>{{ subscribe }}</td>
                        <td>
                          <a href="{{ site_url('adminuao3hltbr0/page_users/edit/' ~ user.id) }}" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i>Edit
                          </a>
                          <a href="{{ site_url('adminuao3hltbr0/page_users/detail/' ~ user.id) }}" class="btn btn-default btn-sm">
                            <i class="fa fa-eye"></i>View
                          </a>
                          {#
                          <button name="del" type="submit" value="{{ user.id }}" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash-o"></i> Delete
                          </button>
                          #}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                {% endif %}
                </table>
                {{form_close()}}
              </div>
            </div>
          </div>
        </div>
        {% include 'adminuao3hltbr0/shareds/footer.twig' %}
      </div>
    </div>
  </section>
  {# section for sidebar left and searching full #}
  <div class="loader-overlay">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
{% endblock %}

