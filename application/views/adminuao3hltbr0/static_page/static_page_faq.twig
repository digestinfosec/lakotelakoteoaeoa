    $("#type_language").change(function () {
        window.location = location.protocol + '//' + location.host + location.pathname + '?lang=' + $(this).val();
    });
  </script>
  <script src="{{ base_url() }}assets/adminuao3hltbr0/js/sidebar_hover.js"></script>
