{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "faq" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}
{% block content %}
  <section>
    {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
    <div class="main-content">
      {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
      <div class="page-content">
        <div class="header">
          <h2><strong>F.A.Q</strong></h2>
          <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
              <li><a href="{{ base_url() }}adminuao3hltbr0/home">Dashboard</a></li>
              <li class="active">faq</li>
            </ol>
          </div>
          {% include 'adminuao3hltbr0/shareds/alert.twig' %}
        </div>
        <div class="row">
          <div class="col-lg-12 portlets">
            <div class="panel">
              <div class="panel-content">
                <div class="row">
                  {{ form_open('') }}
                    <input type="hidden" name="last_editor_id" value="{{ user_login_admin.admin_id }}"/>
                    <input type="hidden" name="id" value="{{ static_page[0].id }}">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="form-label">Select Language</label>
                        {% set options = {
                        '0': { 'label': 'Indonesia', 'value': 1 },
                        '1': { 'label': 'English', 'value': 2 },
                        } %}
                        {{ sg_field('select', 'lang', get_values, {id: "type_language", class: 'form-control'}, 2, options) }}
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group" id="Description_AboutUs_English" style="display: block;">
                        <label class="form-label">Description</label>
                        {{ sg_field('textarea', 'content', static_page[0], {placeholder: 'Content', class: 'form-control'}) }}
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <input type="submit" class="btn btn-md btn-primary" value="Submit">
                      </div>
                    </div>
                  {{form_close('')}}
                </div>
              </div>
            </div>
          </div>
        </div>
        {% include 'adminuao3hltbr0/shareds/footer.twig' %}
      </div>
    </div>
  </section>
  {# section for sidebar left and searching full #}
  <div class="loader-overlay">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
{% endblock %}

