{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "classes and review" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block css %}
<link href="{{ base_url() }}assets/adminuao3hltbr0/plugins/datatables/dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <section>
    {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
    <div class="main-content">
      {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
      <div class="page-content">
        <div class="header">
          <h2><strong>Classes and Review</strong></h2>
          <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
              <li><a href="{{ base_url() }}/adminuao3hltbr0/home">Dashboard</a></li>
              <li class="active">Classes and review</li>
            </ol>
          </div>
          {% include 'adminuao3hltbr0/shareds/alert.twig' %}
        </div>
        <div class="row">
          <div class="col-lg-12 portlets">
            <div class="panel">
              <div class="panel-content pagination2 table-responsive">
                {{ form_open('') }}
                <div class="pull-left">
                  <button name="delete" type="submit" value="delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="fa fa-trash-o"></i> Delete
                  </button>
                  <button name="download" type="submit" value="download" class="btn btn-default">
                    <i class="fa fa-download"></i> Download Excel
                  </button>
                </div>
                <table id="table2" class="table table-hover dataTable">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Created At</th>
                      <th style="width: 170px;">Title</th>
                      <th>Teacher</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th width="20%">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% if courses %}
                      {% for course in courses %}
                        <tr>
                          <td><input name="id[]" value="{{ course.id }}" type="checkbox"
                                   data-checkbox="icheckbox_square-purple"></td>
                          <td>{{ course.created_at|date('Y-m-d') }} </td>
                          <td>{{ course.title }}</td>
                          <td>{{ course.first_name}} {{ course.last_name}}</td>
                          <td>{{ course.category_name }}</td>
                          <td>{{ delimiter_number(course.currency, course.price) }}</td>
                          <td>
                            <a href="{{ site_url('dashboard/teacher/course/edit/' ~ course.course_id) }}?admin_edit=1" class="btn btn-warning btn-sm">
                              <i class="fa fa-edit"></i> Edit
                            </a>
                            <a href="{{ site_url('course/detail/' ~ course.course_id) }}" class="btn btn-default btn-sm">
                              <i class="fa fa-eye"></i> View
                            </a>
                            {#
                            <button name="del" type="submit" value="{{ course.id }}" class="btn btn-danger btn-sm">
                              <i class="fa fa-trash-o"></i> Delete
                            </button>
                            #}
                          </td>
                        </tr>
                      {% endfor %}
                    {% endif %}
                  </tbody>
                </table>
                {{ form_close('') }}
              </div>
            </div>
          </div>
        </div>
        {% include 'adminuao3hltbr0/shareds/footer.twig' %}
      </div>
    </div>
  </section>
  {# section for sidebar left and searching full #}
  <div class="loader-overlay">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
{% endblock %}

