        <li class= "{% if page == 'page receipt' %} active {% endif %}">
          <a href="{{ base_url() }}adminuao3hltbr0/page_listing_receipt">
            <i class="icon-envelope-letter"></i>
            <span>Receipt</span>
          </a>
        </li>
        <li class= "{% if page == 'page teacher fees' %} active {% endif %}">
          <a href="{{ base_url() }}adminuao3hltbr0/page_teacher_fees_payment">
            <i class="icon-folder-alt"></i>
            <span>Teacher's fee payment </span>
          </a>
        </li>
        <li class= "{% if page == 'page commission' %} active {% endif %}">
          <a href="{{ base_url() }}adminuao3hltbr0/page_skillagogo_commission">
            <i class="icon-folder-alt"></i>
            <span>Payout and Commission </span>
          </a>
        </li>
        <li class= "{% if page == 'page vouchers' %} active {% endif %}">
          <a href="{{ base_url() }}adminuao3hltbr0/page_vouchers">
            <i class="icon-credit-card"></i>
            <span>Vouchers</span>
          </a>
        </li>
      {% endif %}
