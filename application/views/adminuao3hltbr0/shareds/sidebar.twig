    <div class="sidebar-footer clearfix">
      <a class="pull-left footer-settings" href="{{ site_url('adminuao3hltbr0/page_administrators/edit/' ~ user_login_admin.admin_id) }}" data-rel="tooltip" data-placement="top" data-original-title="Account Settings">
        <i class="icon-settings"></i>
      </a>
      <a class="pull-left toggle_fullscreen" href="#" data-rel="tooltip" data-placement="top" data-original-title="Fullscreen">
        <i class="icon-size-fullscreen"></i>
      </a>
      <a class="pull-left btn-effect" href="{{ base_url() }}adminuao3hltbr0/logout" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
        <i class="icon-power"></i>
      </a>
    </div>
