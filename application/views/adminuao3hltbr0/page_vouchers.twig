{% extends 'adminuao3hltbr0/master.twig' %}
{% set titleName = "vouchers" %}
{% set bodyClass = "fixed-topbar fixed-sidebar theme-sdtl color-purple" %}

{% block css %}
<link href="{{ base_url() }}assets/adminuao3hltbr0/plugins/datatables/dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
<section>
  {% include 'adminuao3hltbr0/shareds/sidebar.twig' %}
  <div class="main-content">
    {% include 'adminuao3hltbr0/shareds/top_bar.twig' %}
    <div class="page-content">
      <div class="header">
        <h2><strong>Vouchers</strong> </h2>
        <div class="breadcrumb-wrapper">
          <ol class="breadcrumb">
            <li><a href="{{ base_url() }}/adminuao3hltbr0/home">Dashboard</a></li>
            <li class="active">Vouchers</li>
          </ol>
        </div>
        {% include 'adminuao3hltbr0/shareds/alert.twig' %}
      </div>

      <div class="row">
        <div class="col-lg-12 portlets">
          <div class="panel">
            <div class="panel-content pagination2 table-responsive">
              {{form_open('')}}
              <div class="pull-left">
                <button name="download" type="submit" value="download" class="btn btn-default">
                  <i class="fa fa-download"></i> Download Excel
                </button>
              </div>
              <table id="table3" class="table table-hover dataTable">
                <thead>
                  <tr>
                    <th style="width:50px">No</th>
                    <th>Voucher ID</th>
                    <th>Teacher</th>
                    <th>Created At</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Attendee</th>
                    <th>Claim Status</th>
                  </tr>
                </thead>
                <tbody>
                  {% set i=1 %}
                  {% for voucher in vouchers %}
                    <tr>
                      <td>{{i}}</td>
                      <td>{{ voucher.voucher_code }}</td>
                      <td>{{ voucher.teacher_first_name }} {{ voucher.teacher_last_name }}</td>
                      <td>{{ voucher.created_at|date('Y-m-d') }}</td>
                      <td>{{ voucher.currency }}</td>
                      <td>{{ delimiter_number(voucher.currency, voucher.amount) }}</td>
                      <td>{{ voucher.attendee_first_name }} {{ voucher.attendee_last_name }}</td>
                      <td>
                        {% if voucher.is_redeemed == 1 %}
                          <h4>
                            <span class="label label-success">
                              Yes
                            </span>
                          </h4>
                        {% elseif voucher.is_redeemed == 0 and voucher.status == 2 %}
                          <h4>
                            <span class="label label-danger">
                              Expired
                            </span>
                          </h4>
                        {% elseif voucher.is_redeemed == 0 and voucher.status == 3 %}
                          <h4>
                            <span class="label label-danger">
                              Converted
                            </span>
                          </h4>
                        {% else %}
                          <h4>
                            <span class="label label-warning">
                              Not Yet
                            </span>
                          </h4>
                        {% endif %}
                      </td>
                    </tr>
                  {% set i=i+1 %}
                  {% endfor %}
                </tbody>
              </table>
              {{ form_close() }}
            </div>
          </div>
        </div>
      </div>

      {% include 'adminuao3hltbr0/shareds/footer.twig' %}
    </div>
  </div>
</section>
{# section for sidebar left and searching full #}
