                <div class="col-md-12">
                  <div class="row">
                    <div class="forgot-pass">
                      <a href="{{ base_url('forgot-password') }}" class="color-sgogo-purple">
                        {{ line('forgot', 'modal') }}
                      </a>
                    </div>
                  </div>
                </div>
                <div class="dont-have-account">
                  {{ line('no-acc', 'modal') }}
                  <a href="{{ base_url('register') }}">
                    <strong class="color-sgogo-purple">{{ line('sign_up', 'button') }}</strong>
