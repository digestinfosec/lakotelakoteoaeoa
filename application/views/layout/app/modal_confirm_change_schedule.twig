<div class="modal fade" id="skillagogo-confirm-change-schedule" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center" role="document">
      <div class="modal-content">
        <div class="box-newsletter box-cancellation">
          <div class="body-white">
            <div class="row">
              <div class="col-md-12">
                <div class="pull-right">
                  <a class="close close-modal" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></a>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="txt-pop-up text-center">
                  {{line('confirm_change_schedule','field')}}: <span style="font-family: gotham-bold;">{{ course.title }}</span>.
