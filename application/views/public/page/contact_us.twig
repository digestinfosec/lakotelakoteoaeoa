{% extends 'layout/app/master.twig' %}
{% set titleName = line('title_20', 'dashboard') %}
{% set ClassHeader1Color = "bg-sgogo-gray-dark" %}
{% set ClassHeader2Color = "bg-sgogo-gray-dark" %}
{% set SubTitleHeader = line('contact_us','static_page') %}
{% set header0, header1, header2, header3 = true, true, true, true %}
{% set footer = true %}

{% block content %}
  <section class="static-contact-us-wrapper">
    <div class="container">
      <div class="col-md-8">
        <div class="form-contact">
          <div class="title-one">{{ line('contact_us_1', 'static_page') }}</div>
          <div class="box-form">
            <div class="title">{{ line('contact_us_2', 'static_page') }}</div>
            <div class="sub-title">
              {{ line('contact_us_3', 'static_page') }}
            </div>
            {{ form_open('page/contact_us') }}
            <div class="row">
              <div class="col-md-12">
                <label for="name">{{line('name', 'field')}}</label>
                {{ sg_field('text', 'first_name', profile.first_name ~ " " ~ profile.last_name, {class: 'form-control'}) }}
              </div>
              <div class="col-md-12">
                <label for="email">{{line('email', 'field')}}</label>
                {{ sg_field('text', 'email', profile, {class: 'form-control'}) }}
              </div>
              <div class="col-md-12">
                <label for="mobile_phone">{{line('mobile_phone', 'field')}}</label>
                {{ sg_field('text', 'mobile_phone', profile, {class: 'form-control'}) }}
              </div>
              <div class="col-md-12">
                <label for="message">{{line('message', 'static_page')}}</label>
                {{ sg_field('textarea', 'message', profile, {class: 'form-control'}) }}
              </div>
              <div class="col-md-12">
                <div class="text-center">
                  <input type="submit" value="{{ line('submit','button') }}" class="btn btn-lg-gray">
                </div>
              </div>
            </div>
            {{ form_close() }}
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="information">
          <div class="title">skillagogo contact</div>
          <div class="box-info-desc">
            {#
            <div class="list-id">
              <div class="i-left"><i class="fa fa-comments"></i></div>
              <div class="i-right">skillagogo_chat</div>
            </div>
            #}
            <a href="mailto:contact@skillagogo.com" class="list-id">
              <div class="i-left"><i class="fa fa-envelope"></i></div>
              <div class="i-right">contact@skillagogo.com</div>
            </a>
            <a href="tel:+6591845698" class="list-id">
              <div class="i-left"><i class="fa fa-phone"></i></div>
              <div class="i-right">+65 91845698</div>
            </a>
          </div>
          <div class="box-social-bottom">
            <ul>
              <li>
                <a href="https://www.facebook.com/skillagogo/" class="btn btn-facebook" data-toggle="tooltip" data-placement="top"
                   title="Facebook">
                  <i class="fa fa-facebook"></i>
                </a>
              </li>
              <li>
                <a href="https://twitter.com/skillagogo" class="btn btn-twitter" data-toggle="tooltip" data-placement="top"
                   title="Twitter">
                  <i class="fa fa-twitter"></i>
                </a>
              </li>
              <li>
                <a href="https://www.linkedin.com/company/skillagogo-pte-ltd" class="btn btn-linkedin" data-toggle="tooltip" data-placement="top"
                   title="Linkedin">
                  <i class="fa fa-linkedin"></i>
                </a>
              </li>
              <li>
                <a href="https://www.instagram.com/skillagogo/" class="btn btn-instagram" data-toggle="tooltip" data-placement="top"
                   title="Instagram">
                  <i class="fa fa-instagram"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block script %}
  <script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
  </script>
{% endblock %}
