    </a>

  </div>
  <div class="title">{{ line('recommend_title', 'teacher') }}</div>
  <div class="sub-title">
    {{ line('recommend_sub', 'teacher') }}
  </div>
  {{ form_open('', {id: 'form-recommend-teacher'}) }}
  <div class="box-form">
    {% if error %}
    <div class="col-lg-12 text-center">
      <div class="alert alert-danger">{{ error|raw }}</div>
    </div>
    {% endif %}
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="title-form">
        {{line('your_profile','field')}}
      </div>
      <div class="recommend-group">
        <input type="text" class="form-control" name="submitter_name" placeholder="{{ line('name', 'field') }}">
        <div class="six-start">*</div>
        <label for="submitter_name" class="error" style="display: none;"></label>
      </div>
      <div class="recommend-group">
        <input type="email" class="form-control" name="submitter_email" placeholder="{{line('email', 'field')}}">
        <div class="six-start">*</div>
        <label for="submitter_email" class="error" style="display: none;"></label>
      </div>
      <br>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="title-form">
        {{line('your_recommendation','field')}}
      </div>
      <div class="recommend-group">
        <input type="text" name="teacher_name" class="form-control" placeholder="{{line('teacher_name','field')}}">
        <div class="six-start">*</div>
        <label for="teacher_name" class="error" style="display: none;"></label>
      </div>
      <div class="recommend-group">
        <select name="teacher_expertise" class="form-control">
          <option value="">{{line('select_please','categories')}}</option>
          {% for category in categories %}
            <optgroup label="{{ line('categories_' ~ category.id,'categories') }}">
              {% for child in category.child %}
                <option value="{{ child.id }}">{{ line('categories_' ~ child.id,'categories') }}</option>
              {% endfor %}
            </optgroup>
          {% endfor %}
        </select>
        <div class="six-start">*</div>
        <label for="teacher_expertise" class="error" style="display: none;"></label>
      </div>
      <div class="recommend-group">
        <input type="text" name="teacher_contact" class="form-control" placeholder="{{line('teacher_contact','field')}}">
        <div class="six-start">*</div>
        <label for="teacher_contact" class="error" style="display: none;"></label>
      </div>
      <div class="recommend-group">
        <input type="email" name="teacher_email" class="form-control" placeholder="{{line('email', 'field')}}">
        <div class="six-start">*</div>
        <label for="teacher_email" class="error" style="display: none;"></label>
      </div>
      <div class="recommend-group">
        <select name="teacher_country" class="form-control" id="teacher_country">
          <option value="Singapore">Singapore</option>
          <option value="Indonesia">Indonesia</option>
        </select>        
        <div class="six-start">*</div>
        <label for="teacher_country" class="error" style="display: none;"></label>
      </div>
