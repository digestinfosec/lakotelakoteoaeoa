<script>
  $(document).ready(function () {
    $.validator.setDefaults({
      highlight: function (element, errorClass, validClass) {
        if (element.type === "radio") {
          this.findByName(element.name).addClass('error-radio');
        } else {
          $(element).closest('.recommend-group').removeClass('has-success has-feedback').addClass('has-error has-feedback');
          $(element).closest('.recommend-group').find('i.fa').remove();
          $(element).closest('.recommend-group').append('<i class="fa fa-exclamation fa-lg form-control-feedback right-i"></i>');
        }
      },
      unhighlight: function (element, errorClass, validClass) {
        if (element.type === "radio") {
          this.findByName(element.name).removeClass(errorClass).addClass(validClass);
        } else {
          $(element).closest('.recommend-group').removeClass('has-error has-feedback').addClass('has-success has-feedback');
          $(element).closest('.recommend-group').find('i.fa').remove();
          $(element).closest('.recommend-group').append('<i class="fa fa-check fa-lg form-control-feedback right-i"></i>');
        }
      }
    });

    $.validator.addMethod(
      "regex",
      function(value, element, regexp) {
        var re = new RegExp(regexp);
        return this.optional(element) || re.test(value);
      },
      "Please check your input."
      );

    $("#form-recommend-teacher").validate({
      ignore: [],
      rules: {
        'submitter_name': {
          required: true
        },
        'submitter_email': {
          required: true,
          email: true
        },
        'teacher_name': {
          required: true
        },
        'teacher_expertise': {
          required: true
        },
        'teacher_contact': {
          required: true
        },
        'teacher_email': {
          required: true,
          email: true
        }
        'teacher_country': {
          required: true
        }
      },
      messages: {
        submitter_name: {
          required: "Please enter your name."
        },
        submitter_email: {
          required: "Email address is invalid."
        },
        teacher_name: {
          required: "Please enter the teacher's name."
        },
        teacher_expertise: {
          required: "Please enter the teacher's expertise."
        },
        teacher_contact: {
          required: "Please enter the teacher's phone number."
        },
        teacher_email: {
          required: "Email address is invalid."
        }
        teacher_email: {
          required: "Pease enter the teacher's country."
        }      
      }
    });
  });
</script>
